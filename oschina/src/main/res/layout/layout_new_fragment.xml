<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearlayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <!-- app:tabMode="scrollable" tablayout里完成滚动-->
            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                app:tabMode="scrollable"
                />
            <RelativeLayout
                android:id="@+id/RelativeLayoutfunction"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1">
                <TextView
                    android:text="切换栏目"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_delete"
                    android:text="删除"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <ImageButton
                android:id="@+id/iv_more"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/crossnormal1"/>
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:id="@+id/linear"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.itheima.oschina.view.DragGridLayout
                android:id="@+id/dragGridLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:animateLayoutChanges="true"></com.itheima.oschina.view.DragGridLayout>
            <TextView
                android:text="一条华丽的分割线--------------------------------------------------------"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.itheima.oschina.view.DragGridLayout
                android:id="@+id/dragGridLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="8"
                android:animateLayoutChanges="true"></com.itheima.oschina.view.DragGridLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>