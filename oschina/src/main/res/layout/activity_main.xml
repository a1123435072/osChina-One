<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--标题栏-->
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/actionbar_background"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="标题" />
    </android.support.v7.widget.Toolbar>

    <!--放置fragment的容器-->
    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <!--底部的导航栏-->
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--综合-->
        <RadioButton
            android:id="@+id/rb_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_icon_new"
            android:gravity="center"
            android:text="综合"
            android:textColor="@color/tab_title_slide_selector" />

        <!--动弹-->
        <RadioButton
            android:id="@+id/rb_tweet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_icon_tweet"
            android:gravity="center"
            android:text="动弹"
            android:textColor="@color/tab_title_slide_selector" />


        <!--发布动弹-->
        <TextView
            android:id="@+id/tv_post_tweet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_post_tweet"
            android:gravity="center"
            android:paddingTop="10dp" />


        <!--发现-->
        <RadioButton
            android:id="@+id/rb_explore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_icon_explore"
            android:gravity="center"
            android:text="发现"
            android:textColor="@color/tab_title_slide_selector" />

        <!--我的-->
        <RadioButton
            android:id="@+id/rb_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_icon_me"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/tab_title_slide_selector" />


    </RadioGroup>

</LinearLayout>


