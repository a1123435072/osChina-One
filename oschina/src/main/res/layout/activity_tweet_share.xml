<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/actionbar_background"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="取消"
            android:textSize="18sp"
            android:layout_marginTop="6.5dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="弹一弹"
            android:gravity="center"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="发送"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6.5dp"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_share"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:hint="今天你动弹了吗？"
        android:gravity="top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_showImage"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <!--图片-->
        <ImageView
            android:id="@+id/iv_image"
            android:src="@drawable/quickoption_icon_album_selector"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <!--艾特-->
        <ImageView
            android:id="@+id/iv_at"
            android:src="@drawable/compose_toolbar_mention_selector"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <!--#-->
        <ImageView
            android:id="@+id/iv_jinhao"
            android:src="@drawable/compose_toolbar_trend_selector"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <!--表情-->
        <ImageView
            android:id="@+id/iv_emoji"
            android:src="@drawable/selector_keyboard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>